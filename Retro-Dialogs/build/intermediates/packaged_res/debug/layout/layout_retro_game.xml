<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="0dp"
        app:cardCornerRadius="20dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/retro_game_background">
            <ImageView
                android:id="@+id/retro_gaming_background"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:background="@drawable/round_corners"
                android:outlineProvider="background"
                android:src="@drawable/ic_retro_gaming_dialog1x"/>

            <TextView
                android:id="@+id/retro_gaming_body_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="40dp"
                android:layout_marginStart="40dp"
                android:fontFamily="@font/arcade"
                android:textSize="20sp"
                android:lines="4"
                android:text="example"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/retro_gaming_background"
                android:layout_marginBottom="25dp"
                android:layout_marginStart="40dp"
                android:layout_marginEnd="40dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/retro_gaming_yes_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/arcade"
                    android:text="Yes"/>
                <TextView
                    android:id="@+id/retro_gaming_no_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/arcade"
                    android:text="No"/>
                <TextView
                    android:id="@+id/retro_gaming_cancel_btn"
                    android:layout_weight="1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="25sp"
                    android:fontFamily="@font/arcade"
                    android:text="Cancel"/>
            </LinearLayout>
        </RelativeLayout>
    </androidx.cardview.widget.CardView>



</RelativeLayout>